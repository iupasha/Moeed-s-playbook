apiVersion: apps/v1
kind: Deployment
metadata:
  name: "{{ app_name }}"
  labels:
    app: "{{ app_name }}"
  
spec:
  replicas: "{{ replicas }}"
  selector:
    matchLabels:
      app: "{{ app_name }}"
  
  template:
    metadata:
      labels:
        app: "{{ app_name }}"
    spec:
      containers:
      -  name: "{{ image_name }} container"
         image: "{{ image_name }}:{{ image_tag }}"
      
        
